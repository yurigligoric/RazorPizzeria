<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Great Selection of Awesome Pizzas</h1>
        <h4>No need to look at other places</h4>
        <h4>It is here</h4>
        <p class="smallText"><i>One pizza is limit, after the limit no more limit</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                         <img src="~/images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText"></div>
                        <h3 style="text-align:left">Create your own Pizza</h3>
                        <p style="text-align: left">Make your own pizza with our own pizzamaker</p>
                        <a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try now!</a>
                    </div>
                </div>
            </div>
            @foreach(var pizza in Model.fakePizzaDB)
            {
                var imagePath = "~/Images/Pizzas/" + (pizza.ImageTitle + ".png");
                <div class="col-4 mb-5">
                    
                    <a class="pizza-img" asp-area="" asp-page="/Checkout/Checkout"
                    asp-route-ImageTitle="@pizza.ImageTitle" 
                    asp-route-PizzaPrice="@pizza.FinalPrice"
                    asp-route-PizzaName="@pizza.PizzaName"
                    
                    ><img src="@imagePath" class="w-100" asp-append-version="true" /></a>
                    <br />
                </div>
            }
        </div>
